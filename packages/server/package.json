{
  "name": "wga-server",
  "private": true,
  "version": "0.1.0",
  "description": "Server for the Window Gadgets Authenticator",
  "main": "src/index.js",
  "author": {
    "name": "Jack R. Scott",
    "email": "jack.rob.scott@gmail.com"
  },
  "scripts": {
    "dev": "nodemon",
    "start": "ts-node src/index.ts",
    "debug": "node --inspect=5858 -r ts-node/register src/index.ts",
    "test": "NODE_ENV=test mocha --recursive --exit --require=ts-node/register './src/**/*.test.ts'",
    "ship": "now --target production",
    "prepublishOnly": "cp ../../README.md .",
    "postpublish": "rm -f README.md",
    "compile": "tsc",
    "clean": "rm -rf lib",
    "create": "yarn run clean && yarn run compile"
  },
  "dependencies": {
    "@types/graphql": "^14.5.0",
    "@types/graphql-iso-date": "^3.3.3",
    "@types/graphql-type-json": "^0.3.2",
    "@types/micro": "^7.3.3",
    "@types/node": "^12.7.2",
    "graphql": "^14.5.4",
    "graphql-iso-date": "^3.6.1",
    "graphql-type-json": "^0.3.0",
    "http-status-codes": "^1.3.2",
    "micro": "^9.3.4",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3",
    "utility-types": "^3.7.0",
    "wga-api": "^0.1.5"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/dotenv-safe": "^5.0.3",
    "dotenv": "^8.1.0",
    "dotenv-safe": "^8.1.0",
    "nodemon": "^1.19.1"
  }
